<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorsActivity"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_image_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:id="@+id/road_left">

            <ImageView
                android:id="@+id/rock_left1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_left8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/motor"
                android:layout_weight="2"
                android:id="@+id/motor_left"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/road_left_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/road_left"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rock_left_middle1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />


            <ImageView
                android:id="@+id/rock_left_middle6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_left_middle8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />

            <ImageView
                android:id="@+id/motor_left_middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/motor"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_toEndOf="@+id/road_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:id="@+id/road_middle"
            >
            <ImageView
                android:id="@+id/rock_middle1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_middle7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/rock_middle8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>

            <ImageView
                android:baselineAlignBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/motor"
                android:id="@+id/motor_middle"
                android:layout_weight="2"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/road_right_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/road_left"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rock_right_middle1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />


            <ImageView
                android:id="@+id/rock_right_middle6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />
            <ImageView
                android:id="@+id/rock_right_middle8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/rock" />

            <ImageView
                android:id="@+id/motor_right_middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/motor"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_toEndOf="@+id/road_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:id="@+id/road_right"
            >
            <ImageView
                android:id="@+id/rock_right1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rock_right7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/rock_right8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/rock"
                android:layout_weight="1"/>

            <ImageView
                android:baselineAlignBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/motor"
                android:id="@+id/motor_right"

                android:layout_weight="2"


                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/panel_IMG_heart1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/panel_IMG_heart2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/panel_IMG_heart1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/panel_IMG_heart1"
        android:src="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/panel_IMG_heart3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/panel_IMG_heart1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/panel_IMG_heart2"
        android:src="@drawable/ic_heart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Game Over!!"
        android:textColor="@color/black"
        android:textSize="30pt"
        android:id="@+id/gameOverText"

        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:id="@+id/frame1_EDT_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOverText"
        android:hint="Nickname"
        android:padding="16dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/frame1_BTN_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame1_EDT_nickname"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:text="Add"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/purple_500"
        app:cornerRadius="30dp"
        />
    <TextView
        android:id="@+id/arrows_TV_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:layout_alignTop="@id/panel_IMG_heart1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textSize="20pt"
        android:textColor="@color/black"
        />

</RelativeLayout>
